        }else{
            description.value = ""
        }
        if(sessionStorage.getItem('inv_image')!== undefined){
            image.value =sessionStorage.getItem('inv_image')
        }else{
            image.value = ""
        }
        if(sessionStorage.getItem('inv_thumbnail')!== undefined){
            thumbnail.value =sessionStorage.getItem('inv_thumbnail')
        }else{
            thumbnail.value = ""
        }
        if(sessionStorage.getItem('inv_price')!== undefined){
            price.value =sessionStorage.getItem('inv_price')
        }else{
            price.value = ""
        }
        if(sessionStorage.getItem('inv_year')!== undefined){
            year.value =sessionStorage.getItem('inv_year')
        }else{
            year.value = ""
        }
        if(sessionStorage.getItem('inv_miles')!== undefined){
            miles.value =sessionStorage.getItem('inv_miles')
        }else{
            miles.value = ""
        }
        if(sessionStorage.getItem('inv_color')!== undefined){
            color.value =sessionStorage.getItem('inv_color')
        }else{
            color.value = ""
        }
   
        window.onload = sessionStorage.clear()
       
   
</script>