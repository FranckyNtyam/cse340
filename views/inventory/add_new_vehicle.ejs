   sessionStorage.setItem('inv_price', price.value)
   sessionStorage.setItem('inv_year', year.value)
   sessionStorage.setItem('inv_miles', miles.value)
   sessionStorage.setItem('inv_color', color.value)
})
    
        if(sessionStorage.getItem('inv_make')!== undefined){
            make.value =sessionStorage.getItem('inv_make')
        }else{
            make.value = ""
        }
        if(sessionStorage.getItem('inv_model')!== undefined){
            model.value =sessionStorage.getItem('inv_model')
        }else{
            model.value = ""
        }
